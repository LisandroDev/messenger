{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "baseUrl": "./src",
    "paths": { "@/*": ["*"] },
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "typeRoots": ["./types"],
    "skipLibCheck": true
  },
  "ts-node": {
    "files": true
  }
}
